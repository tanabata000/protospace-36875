<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">ユーザー新規登録</h2>
      
      <% if user_signed_in? %>
            <div class="nav__right"> 
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: :nav__logout %>
              <%= link_to "New Proto", new_prototype_path, class: :nav__btn %>
            </div> 
          <% end %>

        <%# 「モデル名」にはUserモデルであれば@userを渡しましょう。%>
        <%# 「新規登録機能へのパス」は、devise導入後にrails routesを実行してdevise/registrations#createへのパスを確認し、記載してください。 %>
        <%#= form_with model: モデル名, url: 新規登録機能へのパス, method: post, local: true do |f| %>
        <%= form_with model: @user, url: user_registration_path, method: :post, local: true do |f| %>

         <%# Email登録のラベルとボックス　%>
        <div class="field">
        <%#= f.フォームヘルパー :登録対象カラム %>
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, id:"user_email", autofocus: true, autocomplete: "email" %>
        </div>

        <%# PW登録ラベルとボックス　%>
        <div class="field">
          <%= f.label :password, "パスワード（6文字以上）" %><br />
          <%= f.password_field :password, id:"user_password", autocomplete: "new-password" %>
        </div>
        
        <%# PW再入力ラベルとボックス　%>
        <div class="field">
          <%= f.label :password_confirmation, "パスワード再入力" %><br />
          <%= f.password_field :password_confirmation, id:"user_password_confirmation", autocomplete: "new-password" %>
        </div>

        <%# ユーザー名ラベルとボックス　%>
        <div class="field">
          <%= f.label :name, "ユーザー名" %><br />
          <%= f.text_field :name, id:"user_name" %>
        </div>

        <%# プロフィールラベルとボックス　%>
        <div class="field">
          <%= f.label :profile, "プロフィール" %><br />
          <%= f.text_area :profile, class: :form__text, id:"user_profile" %>
        </div>

        <%# 所属ラベルとボックス　%>
        <div class="field">
          <%= f.label :occupation, "所属" %><br />
          <%= f.text_area :occupation, class: :form__text, id:"user_occupation" %>
        </div>

        <%# 役職ラベルとボックス　%>
        <div class="field">
          <%= f.label :position, "役職" %><br />
          <%= f.text_area :position, class: :form__text, id:"user_position" %>
        </div>

        <%# 送信ボタン %>
        <div class="actions">
          <%= f.submit "新規登録", class: :form__btn  %>
        </div>
      <% end %>
    </div>
  </div>
</div>